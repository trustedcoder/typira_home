<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#D1D4D9">

    <!-- Dual-Row Toolbar -->
    <LinearLayout
        android:id="@+id/toolbar_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#E8EAED">

        <!-- Row 1: AI Action Strip (Icons) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="12dp">
            
            <!-- Left: Hub Icon -->
            <ImageButton
                android:id="@+id/btn_hub"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_ai_custom"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="Agent Hub"
                android:scaleType="fitCenter"
                android:padding="8dp"/>

            <!-- Spacer -->
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            
            <!-- Right: Tools -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical">
                
                <ImageButton
                    android:id="@+id/btn_rewrite_icon"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:src="@drawable/ic_rewrite"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Rewrite"
                    android:tint="#9C27B0"
                    android:padding="8dp"/>

                <ImageButton
                    android:id="@+id/btn_paste_icon"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:src="@drawable/ic_paste"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Paste to Memory"
                    android:tint="#FF9800"
                    android:padding="8dp"
                    android:layout_marginStart="8dp"/>

                <ImageButton
                    android:id="@+id/btn_mic_icon"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:src="@drawable/ic_mic"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Voice Input"
                    android:tint="#F44336"
                    android:padding="8dp"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D1D4D9"/>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D1D4D9"/>

        <!-- Row 2: Agent Thought Stream (Multi-line Text) -->
        <androidx.core.widget.NestedScrollView
            android:id="@+id/suggestion_scroll"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#FFFFFF"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp">
            
            <TextView
                android:id="@+id/tv_suggestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Typira is thinking..."
                android:textColor="#5F6368"
                android:textSize="14sp"
                android:lineSpacingExtra="4dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground"/>
        </androidx.core.widget.NestedScrollView>

        <!-- Use a separator if needed, or just distinct backgrounds -->
        
        <!-- Row 3: Smart Action Grid (Scrollable Chips) -->
        <HorizontalScrollView
            android:id="@+id/smart_action_scroll"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#F0F2F5"
            android:scrollbars="none">
            
            <LinearLayout
                android:id="@+id/smart_action_container"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="12dp">
                
                <TextView
                    android:id="@+id/tv_smart_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Waiting for intent..."
                    android:textColor="#9AA0A6"
                    android:textSize="12sp"
                    android:textStyle="italic"
                    android:padding="8dp"/>
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <!-- Main Keyboard Area -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="8dp"
        android:paddingBottom="4dp">

        <!-- QWERTY Layout Container -->
        <LinearLayout
            android:id="@+id/layout_qwerty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <!-- Row 1: QWERTYUIOP -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:paddingHorizontal="3dp"
                android:weightSum="10">
                
                <Button android:id="@+id/key_q" style="@style/KeyboardKey" android:text="q" />
                <Button android:id="@+id/key_w" style="@style/KeyboardKey" android:text="w" />
                <Button android:id="@+id/key_e" style="@style/KeyboardKey" android:text="e" />
                <Button android:id="@+id/key_r" style="@style/KeyboardKey" android:text="r" />
                <Button android:id="@+id/key_t" style="@style/KeyboardKey" android:text="t" />
                <Button android:id="@+id/key_y" style="@style/KeyboardKey" android:text="y" />
                <Button android:id="@+id/key_u" style="@style/KeyboardKey" android:text="u" />
                <Button android:id="@+id/key_i" style="@style/KeyboardKey" android:text="i" />
                <Button android:id="@+id/key_o" style="@style/KeyboardKey" android:text="o" />
                <Button android:id="@+id/key_p" style="@style/KeyboardKey" android:text="p" />
            </LinearLayout>

            <!-- Row 2: ASDFGHJKL -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:paddingHorizontal="18dp"
                android:weightSum="9"> 

                <Button android:id="@+id/key_a" style="@style/KeyboardKey" android:text="a" />
                <Button android:id="@+id/key_s" style="@style/KeyboardKey" android:text="s" />
                <Button android:id="@+id/key_d" style="@style/KeyboardKey" android:text="d" />
                <Button android:id="@+id/key_f" style="@style/KeyboardKey" android:text="f" />
                <Button android:id="@+id/key_g" style="@style/KeyboardKey" android:text="g" />
                <Button android:id="@+id/key_h" style="@style/KeyboardKey" android:text="h" />
                <Button android:id="@+id/key_j" style="@style/KeyboardKey" android:text="j" />
                <Button android:id="@+id/key_k" style="@style/KeyboardKey" android:text="k" />
                <Button android:id="@+id/key_l" style="@style/KeyboardKey" android:text="l" />
            </LinearLayout>

            <!-- Row 3: Shift, ZXCVBNM, Backspace -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:paddingHorizontal="3dp"
                android:weightSum="10"> 

                <Button 
                    android:id="@+id/key_shift" 
                    style="@style/KeyboardKeySpecial" 
                    android:text=""
                    android:layout_weight="1.5" />
                
                <Button android:id="@+id/key_z" style="@style/KeyboardKey" android:text="z" />
                <Button android:id="@+id/key_x" style="@style/KeyboardKey" android:text="x" />
                <Button android:id="@+id/key_c" style="@style/KeyboardKey" android:text="c" />
                <Button android:id="@+id/key_v" style="@style/KeyboardKey" android:text="v" />
                <Button android:id="@+id/key_b" style="@style/KeyboardKey" android:text="b" />
                <Button android:id="@+id/key_n" style="@style/KeyboardKey" android:text="n" />
                <Button android:id="@+id/key_m" style="@style/KeyboardKey" android:text="m" />
                
                <Button 
                    android:id="@+id/key_backspace" 
                    style="@style/KeyboardKeySpecial" 
                    android:text="⌫"
                    android:layout_weight="1.5"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Emoji Layout Container -->
        <ScrollView
            android:id="@+id/layout_emoji"
            android:layout_width="match_parent"
            android:layout_height="168dp"
            android:visibility="gone">
            <GridLayout
                android:id="@+id/grid_emoji"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="8"
                android:padding="4dp" />
        </ScrollView>

        <!-- Agent Hub Layout Container -->
        <androidx.core.widget.NestedScrollView
            android:id="@+id/layout_agent_hub"
            android:layout_width="match_parent"
            android:layout_height="224dp"
            android:visibility="gone"
            android:padding="8dp">
            <LinearLayout
                android:id="@+id/container_agent_hub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </androidx.core.widget.NestedScrollView>
        
        <!-- Row 4: 123, Emoji, Space, Return -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:paddingHorizontal="3dp"
            android:weightSum="10">

            <Button android:id="@+id/key_mode" style="@style/KeyboardKeySpecial" android:text="\?123" android:textSize="14sp" android:layout_weight="1.5" />
            
            <Button 
                android:id="@+id/key_emoji" 
                style="@style/KeyboardKeySpecial" 
                android:text="☺"
                android:textSize="20sp"
                android:layout_weight="1.5" />
                
            <Button android:id="@+id/key_space" style="@style/KeyboardKey" android:text="" android:layout_weight="5" />
            <Button android:id="@+id/key_enter" style="@style/KeyboardKeySpecial" android:text="Go" android:textSize="14sp" android:layout_weight="2" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
